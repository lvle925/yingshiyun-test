# 影视云统一服务环境变量配置

# ==================== 服务配置 ====================
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8000
LOG_LEVEL=INFO
LOG_DIR=logs

# ==================== 数据库配置 ====================
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=3306
DB_NAME=yingshiyun

# ==================== VLLM配置 ====================
VLLM_API_BASE_URL=http://localhost:8001/v1
VLLM_MODEL_NAME=your_model_name
VLLM_MAX_RETRIES=5
VLLM_RETRY_DELAY_SECONDS=5.0
VLLM_REQUEST_TIMEOUT_SECONDS=120
VLLM_CONCURRENT_LIMIT=10
VLLM_SLOT_WAIT_TIMEOUT_SECONDS=60

# ==================== API密钥配置 ====================
APP_SECRET_yingshi_appid=your_secret_key
APP_SECRET_test_app=your_test_secret_key

# ==================== 文件路径配置 ====================
CARDS_CSV_PATH=assets/卡牌vs牌号.csv
MEANINGS_CSV_PATH=assets/雷牌信息集合.csv
XYHS_XLSX_PATH=assets/xyhs.xlsx

# ==================== 外部API配置 ====================
ASTRO_API_URL=https://api.astro.example.com
ASTRO_API_KEY=your_astro_api_key

# ==================== Redis配置 ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ==================== 会话配置 ====================
SESSION_TIMEOUT=3600
MAX_SESSION_HISTORY=10

# ==================== LLM配置 ====================
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
LLM_TOP_P=0.9

# ==================== 监控配置 ====================
ENABLE_MONITORING=true
METRICS_PORT=9090
